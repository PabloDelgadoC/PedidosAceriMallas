{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">P E D I D O S</h3>
        <h5 style="text-align: center; color: #cb1189;">Pedidos Entregados</h5>
      
        <br>
        <div class="row">
            <div class="span6">
                <form action="/pedido/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
        </div>

    </div>
    <div class="presentar">
        <table>
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Fecha</th>
                    <th class="sep" style="color:#ffffff;">Cliente</th>
                    <th class="sep" style="color:#ffffff;">RUC</th>
                    <th class="sep" style="color:#ffffff;">Orden N.-</th>
                    <th class="sep" style="color:#ffffff;">Descuento</th>
                    <th class="sep" style="color:#ffffff;">SubTotal</th>
                    <th class="sep" style="color:#ffffff;">Iva</th>
                    <th class="sep" style="color:#ffffff;">Total</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each pedidos}}
            <tr>
                <td class="sep">{{fecha}}</td>
                <td class="sep">{{usernombre}}</td>
                <td class="sep">{{userruc}}</td>
                <td class="sep">{{npedido}}</td>
                <td class="sep">{{descuento}}</td>
                <td class="sep">{{subtotal}}</td>
                <td class="sep">{{iva}}</td>
                <td class="sep">{{total}}</td>

                <td class="sep">
                    <a href="/pedido/detalle/{{_id}}">Detalles</a>       
                </td>

                <td class="sep">
                    <a href="/pedido/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>

                <td class="sep">
                    <form action="/pedido/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>