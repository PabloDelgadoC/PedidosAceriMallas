        <h3 style="text-align: center;">P E D I D O S</h3>
        <h5 style="text-align: center; color: #cb1189;">Crea Pedido Nuevo</h5>
        <br>
        <form id="crear_formulario" action="/pedido/add" method="POST"></form>
            <div class="top" > 
                <label>N.- Orden:</label>
                <input class="redondeado" type="text" name="npedido" disabled>
                <label c>Fecha:</label>
                <input class="redondeado" type="date" name="fecha" value=""/>
                
            </div>
            <br>
            <div class="cuerpo">
                <h5>Datos del Comprador</h5>
                <div class="row">
                    
                    <div class="spans2">
                        <div>
                            <label>Cliente:</label>
                            <input class="redondeado derecha" style="width: 220px;" type="text" name="npedido"> 
                        </div>
                        <div>
                            <label>RUC/CI:</label>
                            <input class="redondeado derecha" style="width: 220px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>Correo:</label>
                            <input class="redondeado derecha" style="width: 220px;" type="mail" name="npedido">
                        </div>
                        
                    </div>
                    <div class="spans2">
                        <div>  
                            <label>Direccion: </label>
                            <input class="redondeado derecha" style="width: 220px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>Telefono:  </label>
                            <input class="redondeado derecha" style="width: 220px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>F. Pago:   </label>
                            <select class="redondeado derecha" style="width: 220px;" name="categoria" id="categoria">
                                <option value=""></option>
                                <option value="Efectivo">Efectivo</option>
                                <option value="Cheque">Cheque a fecha</option>
                                <option value="tarjeta">Debito/Tarjeta</option>
                                <option value="Credito">Credito Directo</option>
                            </select>
                        </div>
                    </div>
                    <div class="spans2">
                        <div>
                            <label>F. Entrega:   </label>
                            <select class="redondeado derecha" style="width: 220px;" name="categoria" id="categoria">
                                <option value=""></option>
                                <option value="domicilio">Dominicilio</option>
                                <option value="despacho">Despacho en Local</option>
                                <option value="entregado">Entrega Inmediata</option>
                            </select>
                        </div>
                        
                    </div>
                
                </div>
               
            </div>
            <br>
        
            <div class="row">
                <div class="spang">
                    <div class="seccion_detalle">
                        <h5>Detalle de Orden</h5>
                       
                        <table class="table-template">
                        <thead class="cabecera">
                            <tr>
                                <th class="sep" style="color:#ffffff;">Codigo</th>
                                <th class="sep" style="color:#ffffff;">Nombre</th>
                                <th class="sep" style="color:#ffffff;">Cantidad</th>
                                <th class="sep" style="color:#ffffff;">P. Unit</th>
                                <th class="sep" style="color:#ffffff;">SubTotal</th>
                                <th class="sep" style="color:#ffffff;">IVA</th>
                                <th class="sep" style="color:#ffffff;">Total</th>
                            </tr>
                        </thead>
                        {{#each detallepdido}}
                        <tr>
                            <td class="sep">{{productcodigo}}</td>
                            <td class="sep">{{productnombre}}</td>
                            <td class="sep">{{productcant}}</td>
                            <td class="sep">{{productprecio}}</td>
                            <td class="sep">{{producsubtotal}}</td>
                            <td class="sep">{{ProductiVA}}</td>
                            <td class="sep">{{producttotal}}</td>
                        </tr>
                        {{/each}}
                    </table>


                    </div>

                </div>
                <div class="spans2">
                    <div class="valores">
                        <h5>Importes</h5>
                        <div>
                            <label>Sub Total: </label>
                            <input class="redondeado derecha" style="width: 200px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>Descuento: </label>
                            <input class="redondeado derecha" style="width: 200px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>Sub Total: </label>
                            <input class="redondeado derecha" style="width: 200px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>IVA: </label>
                            <input class="redondeado derecha" style="width: 200px;" type="text" name="npedido">
                        </div>
                        <div>
                            <label>Total: </label>
                            <input class="redondeado derecha" style="width: 200px;" type="text" name="npedido">
                        </div>
                    </div>
                    <br>
                    <div>
                        <button form="crear_formulario" class="button btn btn_personalizado">Crear Pedido</button>
                    </div>
                
                </div>
            </div>
        </form>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Add Producto
