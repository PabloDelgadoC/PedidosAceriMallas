{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">O P E R A D O R E S</h3>
        <br>
        <div class="row">
            <div class="span6">
                <form action="/operador/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
            <div class="span6 ml-auto">
                <a class="btn btn_personalizado" href="/operador"
                    role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <table class="table-template">
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Imagen</th>
                    <th class="sep" style="color:#ffffff;">Operador</th>
                    <th class="sep" style="color:#ffffff;">Correo</th>
                    <th class="sep" style="color:#ffffff;">Cuenta</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each operadores}}
            <tr>
                <td class="sep"><img class="img_presentar2" src={{img}}></td>
                <td class="sep">{{nombre}}&nbsp;{{apellido}}</td>
                <td class="sep">{{email}}</td>
                <td class="sep">{{cuenta}}</td>
                <td class="sep">
                    <a href="/operador/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>
                <td class="sep">
                    <form action="/operador/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>