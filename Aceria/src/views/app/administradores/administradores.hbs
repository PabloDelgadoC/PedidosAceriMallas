{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">A D M I N I S T R A D O R E S</h3>
        <br>
        <div class="row">
            <div class="span6">
                <form action="/administrador/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
            <div class="span6 ml-auto">
                <a class="btn btn_personalizado" href="/administrador"
                    role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <table class="table-template"> 
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Imagen</th>
                    <th class="sep" style="color:#ffffff;">Administrador</th>
                    <th class="sep" style="color:#ffffff;">Cuenta</th>
                    <th class="sep" style="color:#ffffff;">Cuenta</th>
                    <th class="sep" style="color:#ffffff;">DB</th>
                    <th class="sep" style="color:#ffffff;">Creaci√≥n</th>
                    <th class="sep" style="color:#ffffff;">Supervision</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each administradores}}
            <tr>
                <td class="sep"><img class="img_presentar2" src={{img}}></td>
                <td class="sep">{{nombre}}&nbsp;{{apellido}}</td>
                <td class="sep">{{email}}</td>
                <td class="sep">{{cuenta}}</td>
                <td class="sep">
                    <label class="switch">
                        {{#if db}}
                            <input type="checkbox" disabled checked>
                        {{else}}
                            <input type="checkbox" disabled>
                        {{/if}}
                        <span class="slider round"></span>
                    </label>
                </td>
                <td class="sep">
                    <label class="switch">
                        {{#if creacion}}
                            <input type="checkbox" disabled checked>
                        {{else}}
                            <input type="checkbox" disabled>
                        {{/if}}
                        <span class="slider round"></span>
                    </label>
                </td>
                <td class="sep">
                    <label class="switch">
                        {{#if supervision}}
                            <input type="checkbox" disabled checked>
                        {{else}}
                            <input type="checkbox" disabled>
                        {{/if}}
                        <span class="slider round"></span>
                    </label>
                </td>
                <td class="sep">
                    <a href="/administrador/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>
                <td class="sep">
                    <form action="/administrador/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>