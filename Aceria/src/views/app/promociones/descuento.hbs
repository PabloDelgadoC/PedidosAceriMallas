<div class="main">
    <div class="busqueda_parte">
        <a href="/promocion/all" style="color:#622870;"><img src="iconos/atras.png" width="10" height="15" loading="lazy"> Atrás</a>
        <h3 style="text-align: center;">P R O M O C I O N E S</h3>
        <h5 style="text-align: center; color: #cb1189;">Registrar Promoción</h5>
        <br>
        <br>
       
            <div class="row">
                 
                <div class="spanp">
                <form action="/promocion/findCliente" method="POST">
                    <div class="separador">
                        <label>Cliente:</label>
                        <input class="redondeado_busqueda derecha" type="text" id="idcliente" name="idcliente" value="{{usuario.cuenta}}"/>
                        <input class="derecha" type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                    </div>
                </form>

                <form action="/promocion/add" method="POST">
                    <input type="hidden" id="sorpresa" name="idcliente" value="{{usuario.cuenta}}"/>
                    <div class="separador">
                        <label>Titular:</label>
                       
                        <input class="redondeado derecha" type="text" id="namecliente" name="namecliente" value="{{usuario.nombre}}" />
                    </div>

                    <div class="separador">
                        <label>Codigo:</label>
                        <input class="redondeado derecha" type="text" id="codigo" name="codigo" value="" />
                    </div>

                    <div class="separador">
                        <label>Mensaje:</label>
                        <textarea class="redondeado derecha" style="height: 180px;" type="text" id="mensaje" name="mensaje" value="" /></textarea>
                    </div>
                </div>

                <div class="spanp">

                    
                    <div class="separador">
                        <label>Fecha Inicio:</label>
                        <input class="redondeado derecha" type="date" name="finicio" value=""/>
                    </div>

                    <div class="separador">
                        <label>Fecha Inicio:</label>
                        <input class="redondeado derecha" type="date" name="ffin" value="" />
                    </div>

                     <div class="espaciado">
                        
                    </div>

                    <button class="button btn btn_personalizado">REGISTRAR</button>
                </div>

            </div>
        </form>
    </div>
</div>