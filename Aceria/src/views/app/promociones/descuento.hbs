<div class="main">
    <div class="busqueda_parte">
        <a href="/promocion/all" style="color:#622870;"><img src="iconos/atras.png" width="10" height="15" loading="lazy"> Atrás</a>
        <h3 style="text-align: center;">P R O M O C I O N E S</h3>
        <h5 style="text-align: center; color: #cb1189;">Registrar Promoción</h5>
        <br>
        <br>
        <form action="/promocion/add" method="POST">
            <div class="row">
                <div class="spanp">
                    <div class="separador">
                        <label>Codigo:</label>
                        <input class="redondeado derecha" type="text" id="nombre" name="nombre" value="" />
                    </div>
                     <form action="/promocion/client" method="POST">
                        <label>Codigo:</label>
                        <input class="redondeado derecha" type="text" id="nombre" name="nombre" value="" />
                        <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                    </form>

                    <div class="separador">
                        <label>Cliente:</label>
                        <input class="redondeado derecha" type="text" id="apellido" name="apellido" value="" />
                    </div>

                    <div class="separador">
                        <label>Cliente:</label>
                        <input class="redondeado derecha" type="text" id="apellido" name="apellido" value="" />
                    </div>
                    <div class="separador">
                        <label>Correo:</label>
                        <input class="redondeado derecha" type="email" id="email" name="email" value="" />
                    </div>

                    <div class="separador">
                        <label>Usuario:</label>
                        <input class="redondeado derecha" type="text" id="cuenta" name="cuenta" value="" />
                    </div>
                    <div class="separador">
                        <label>Contraseña:</label>
                        <input class="redondeado derecha" type="password" id="contrasena" name="contrasena" value="" />
                    </div>
                </div>

                <div class="spanp">

                    <div class="separador">
                        <label>Imagen:</label>
                        <input type="file" id="img" name="img" accept=".png, .jpeg">
                    </div>
                    
                    <div class="separador">
                        <label>Permisos:</label>
                        <br>
                        <div class="spans">
                             <div class="separador">
                            <label for="db">Base de Datos:</label>
                            <label class="switch derecha">
                                <input type="checkbox" id="db" name="db" value="S">
                                <span class="slider round"></span>
                            </label>
                        </div>

                        <div class="separador" >
                            <label for="creacion">Administrador:</label>
                            <label class="switch derecha">
                                <input type="checkbox" id="creacion" name="creacion" value="S">
                                <span class="slider round"></span>
                            </label>
                        </div>

                        <div class="separador">
                            <label for="supervision">Supervisor:</label>
                            <label class="switch derecha">
                                <input type="checkbox" id="supervision" name="supervision" value="S">
                                <span class="slider round"></span>
                            </label>
                        </div>

                        </div>
                    </div>
                    <button class="button btn btn_personalizado">REGISTRAR</button>
                </div>

            </div>
        </form>
    </div>
</div>