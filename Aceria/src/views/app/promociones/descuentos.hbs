{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">P R O M O C I O N E S</h3>
        <br>
        <div class="row">
            <div class="span6">
                <form action="/promocion/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
            <div class="span6 ml-auto">
                <a class="btn btn_personalizado" href="/promocion"
                    role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <table class="table-template">
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Codigo</th>
                    <th class="sep" style="color:#ffffff;">Cliente</th>
                    <th class="sep" style="color:#ffffff;">Mensaje</th>
                    <th class="sep" style="color:#ffffff;">Estado</th>
                    <th class="sep" style="color:#ffffff;">Fecha<br>Inicio</th>
                    <th class="sep" style="color:#ffffff;">Fecha<br>Fin</th>
                    <th class="sep" style="color:#ffffff;">Fecha<br>de Uso</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each desc}}
            <tr>
                <td class="sep">{{codigo}}</td>
                <td class="sep">{{namecliente}}</td>
                <td class="sep">{{mensaje}}</td>
                <td class="sep">{{estado}}</td>
                <td class="sep">{{finicio}}</td>
                <td class="sep">{{ffin}}</td>
                <td class="sep">
                        {{#if fuso}}
                            {{fuso}}
                        {{else}}
                            --:--:--
                        {{/if}}

                </td>
                <td class="sep">
                    <a href="/promocion/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>
                <td class="sep">
                    <form action="/promocion/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>