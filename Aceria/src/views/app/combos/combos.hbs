    <div class="span9">
        <h2>Combos</h2>
        <div id="buscador">
              <p>Buscar: 
                <input type="text" name="buscadorBox">&nbsp;&nbsp;  
                <a href="#" class="shortcut"><i class="shortcut-icon icon-search"></i></a>
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; 
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                <input type="button" value="Agregar"  onclick="window.location='/combo';">
              </p>
          </div>
        <div id="lista_items">
            <table class = "presentar">
                <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>descripcion</th>
                    <th>precio</th>
                    <th></th><th></th>
                </tr>
                </thead>
            {{#each combos}}
                <tr>
                    <td><img src={{img}}></td>
                    <td>{{nombre}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{precio}}</td>
                    <td><a href="/combo/edit/{{_id}}">Ver Info</a></td>
                    <td>
                      <form action="/combo/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-blok">
                          X
                        </button>
                      </form>
                    </td> 
                </tr> 
            {{/each}}
            </table>
         
            
        </div> 
       
    </div>
