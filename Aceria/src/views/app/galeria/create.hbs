{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <a href="/galeria" style="color:#622870;"><img src="iconos/atras.png" width="10" height="15" loading="lazy"> Atrás</a>
        <h3 style="text-align: center;">G A L E R I A</h3>
        <h5 style="text-align: center; color: #cb1189;">Registrar Imagen</h5>
        <br>
        <br>
        <form action="/galeria/create" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="spanp">
                    <div class="separador">
                        <label>Código:</label>
                        <input class="redondeado derecha" type="text" id="codigo" name="codigo" value="" />
                    </div>
                    <div class="separador">
                        <label>Nombre:</label>
                        <input class="redondeado derecha" type="text" id="nombre" name="nombre" value="" />
                    </div>
                    <div class="separador espaciado">
                        <label>Descripcion:</label>
                        <textarea class="redondeado derecha" style="height: 100px;" type="text" id="descripcion" name="descripcion"/></textarea>
                    </div>            
                    <div class="separador">
                        <label>Imagen:</label>
                        <input type="file" id="img" name="img" accept=".png, .jpeg, .jpg">
                    </div>
                    <div class="separador">
                        <button class="button btn btn_personalizado">REGISTRAR</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>