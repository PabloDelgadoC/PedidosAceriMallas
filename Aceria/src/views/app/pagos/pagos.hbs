{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">P A G O S</h3>
        <br>
        <div class="row">
            <div class="span6">
                <form action="/pagos/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
            <div class="span6 ml-auto">
                <button type="button" class="btn btn_personalizado" data-bs-toggle="modal" data-bs-target="#exampleModal2">
                    AGREGAR ABONO
                </button>
            </div>
        </div>

    </div>
    <div class="presentar">
        <table class="table-template">
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">N.- Pedido</th>
                    <th class="sep" style="color:#ffffff;">Monto</th>
                    <th class="sep" style="color:#ffffff;">Abonos</th>
                    <th class="sep" style="color:#ffffff;">Saldo</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each pago}}
            <tr>
                <td class="sep">{{npedido}}</td>
                <td class="sep">{{monto}}</td>
                <td class="sep">{{pagos}}</td>
                <td class="sep">{{saldo}}</td>
                <td class="sep">
                    <a href="/pagos/detalles/{{_id}}">Ver detalles</a>       
                </td>
                <td class="sep">
                    <form action="/pagos/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>


    <!-- Modal -->
        <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <form action="/pagos/abono" method="POST">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Ingresar Abonos</h5>
                        </div>
                        <div class="modal-body">
                                <div>
                                    <label>Pedido al que Pertenece:</label>&nbsp;&nbsp;
                                    <input class="redondeado2 derecha" style="width: 200px;" step="any" type="number" name="codigo_pedido"> 
                                </div>
                                <div>
                                    <label>Valor:</label>
                                    <input class="redondeado2 derecha" style="width: 200px;" step="any" type="number" name="valor"> 
                                </div>
                                <div>
                                    <label>Fecha:</label>
                                    <input class="redondeado2 derecha"  style="width: 200px;" type="date" name="fecha" >
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button class="btn btn-primary">Agregar Abono</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

</div>