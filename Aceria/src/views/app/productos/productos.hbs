{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">P R O D U C T O S</h3>
        <br>
        <div class="row">
            <div class="span8">
                <form action="/producto/find" method="POST">
                    <label>Categoria: </label>
                    <select class="redondeado" style="width: 200px;" name="categoria" id="categoria">
                        <option value=""></option>
                        <option value="Malla Perforada">Malla Perforada</option>
                        <option value="Planchas">Planchas</option>
                        <option value="Personalizado">Personalizado</option>
                        <option value="Otros">Otros</option>
                    </select>
                    <input class="redondeado" style="width: 200px;" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">

                </form>       

            </div>
            <div class="span4 ml-auto">
                <a class="btn btn_personalizado" href="/producto"
                    role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <table>
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Categoria</th>
                    <th class="sep" style="color:#ffffff;">Imagen</th>
                    <th class="sep" style="color:#ffffff;">Codigo</th>
                    <th class="sep" style="color:#ffffff;">Nombre</th>
                    <th class="sep" style="color:#ffffff;">Dimensiones</th>
                    <th class="sep" style="color:#ffffff;">Precio</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each productos}}
            <tr>
                <td class="sep">{{categoria}}</td>
                <td class="sep"><img class="img_presentar3" src={{img}}></td>
                <td class="sep">{{codigo}}</td>
                <td class="sep">{{nombre}}</td>
                <td class="sep">
                    {{#if alto}}
                        Alto: {{alto}},
                        <br>
                    {{/if}}
                    {{#if ancho}}
                        Ancho: {{ancho}},
                        <br>
                    {{/if}}
                    {{#if grosor}}
                        Grosor: {{grosor}},
                        <br>
                    {{/if}}
                    {{#if diametro}}
                        Diametro: {{diametro}},
                        <br>
                    {{/if}}
                    {{#if separa}}
                        Diametro: {{separa}}
                    {{/if}}
                </td>
                <td class="sep">$ {{precio}} USD x m2
                </td>
                <td class="sep">
                    <a href="/producto/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>
                <td class="sep">
                    <form action="/producto/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>