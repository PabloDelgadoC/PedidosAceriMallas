{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">U S U A R I O S</h3>
        <br>
        <div class="row">
            <div class="span8">
                <form action="/usuario/find" method="POST">
                    <label>Categoria: </label>
                    <select class="redondeado" style="width: 200px;" name="categoria" id="categoria">
                        <option value=""></option>
                        <option value="Persona Natural">Persona Natural</option>
                        <option value="Arquitecto">Arquitecto</option>
                        <option value="Ing. Civil">Ing. Civil</option>
                        <option value="Agro Industria">Agro Industria</option>
                    </select>
                    <input class="redondeado" style="width: 200px;" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">

                </form>       

            </div>
            <div class="span4 ml-auto">
                <a class="btn btn_personalizado" href="/usuario"
                    role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <table class="table-template">
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Imagen</th>
                    <th class="sep" style="color:#ffffff;">Usuario</th>
                    <th class="sep" style="color:#ffffff;">Nombre</th>
                    <th class="sep" style="color:#ffffff;">Apellido</th>
                    <th class="sep" style="color:#ffffff;">Correo</th>
                    <th class="sep" style="color:#ffffff;">Telefono</th>
                    <th class="sep" style="color:#ffffff;">Categoria</th>
                    <th class="sep" style="color:#ffffff;">Estado</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each usuarios}}
            <tr>
                <td class="sep"><img class="img_presentar2" src={{img}}></td>
                <td class="sep">{{cuenta}}</td>
                <td class="sep">{{nombre}}</td>
                <td class="sep">{{apellido}}</td>
                <td class="sep">{{email}}</td>
                <td class="sep">{{telefono}}</td>
                <td class="sep">{{categoria}}</td>
                <td class="sep">
                    <label class="switch">
                        {{#if estado}}
                            <input type="checkbox" disabled checked>
                        {{else}}
                            <input type="checkbox" disabled>
                        {{/if}}
                        <span class="slider round"></span>
                    </label>
                </td>
                <td class="sep">
                    <a href="/usuario/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>
                <td class="sep">
                    <form action="/usuario/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>