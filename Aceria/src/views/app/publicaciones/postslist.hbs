{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">P U B L I C A C I O N E S</h3>
        <br>
        <div class="row">
            <div class="span6">
                <form action="/publicacion/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
            <div class="span6 ml-auto">
                    <a class="tamano cabecera">
                        <img src="iconos/visualizar2_activado.png" width="18" height="14">
                    </a>  
                    <a class="tamano" href="/publicacion/all">
                        <img src="iconos/visualizar.png" width="16" height="16">
                    </a>   

                <a class="btn btn_personalizado" href="/publicacion" role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <table>
            <thead class="cabecera">
                <tr>
                    <th class="sep" style="color:#ffffff;">Publicacion</th>
                    <th class="sep" style="color:#ffffff;">Fecha</th>
                    <th class="sep" style="color:#ffffff;">Descripcion</th>
                    <th class="sep" style="color:#ffffff;">Likes</th>
                    <th class="sep" style="color:#ffffff;">Comentarios</th>
                    <th class="sep" style="color:#ffffff;">Compartidos</th>
                    <th class="sep" style="color:#ffffff;"></th>
                    <th class="sep" style="color:#ffffff;"></th>
                </tr>
            </thead>
            {{#each posts}}
            <tr>
                <td class="sep">{{titulo}}</td>
                <td class="sep">{{fecha}}</td>
                <td class="sep">{{descripcion}}</td>
                <td class="sep">{{likes}}</td>
                <td class="sep">{{coments}}</td>
                <td class="sep">{{shares}}</td>
                <td class="sep">
                    <a href="/publicacion/edit/{{_id}}">
                        <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                    </a>       
                </td>
                <td class="sep">
                    <form action="/publicacion/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                    </form>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>