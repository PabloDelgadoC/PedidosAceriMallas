{{>top}}
{{>sidebar}}
<div class="main">
    <div class="busqueda_parte">
        <h3 style="text-align: center;">P U B L I C A C I O N E S</h3>
        <br>
        <div class="row">
            <div class="span6">
                <form action="/publicacion/find" method="POST">
                    <input class="redondeado" type="text" name="buscadorBox" placeholder="   BUSCAR">
                    <input type="image" src="iconos/buscar.png" width="18" height="18" role="button">
                </form>

            </div>
            <div class="span6 ml-auto">
                    <a class="tamano" href="/publicacion2/all">
                        <img src="iconos/visualizar2.png" width="18" height="14">
                    </a>  
                    <a class="tamano cabecera" >
                        <img src="iconos/visualizar_activado.png" width="16" height="16">
                    </a>   

                <a class="btn btn_personalizado" href="/publicacion" role="button">REGISTRAR</a>
            </div>

        </div>

    </div>
    <div class="presentar">
        <div class="row row-cols-1 row-cols-md-3">
            {{#each posts}}
             <div class="col mb-4">
                <div class="card">
                    <img src={{img}} class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{titulo}}</h5>
                        <small class="text-muted">Likes: {{likes}}</small>
                        <small class="text-muted">Comentarios: {{coments}}</small>
                        <small class="text-muted">Compartido: {{shares}}</small>
                        <p class="card-text">{{descripcion}}</p>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="span1">
                                <small class="text-muted">Publicado: {{fecha}}</small>
                            </div>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <div class="span1">
                                <a href="/publicacion/edit/{{_id}}">
                                    <img src="iconos/editar.png" width="18" height="22" loading="lazy">
                                </a>   
                            </div>
                            &nbsp;&nbsp;&nbsp;&nbsp;
                            <div class="span1">
                                <form action="/publicacion/delete/{{_id}}?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="image" src="iconos/eliminar.png" width="18" height="22" role="button">
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>