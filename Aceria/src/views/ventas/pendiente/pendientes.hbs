                        <li><a href="/mensajes"><i class="icon-comments"></i><span> Mensajes
                                    &emsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><i class="icon-caret-right"></i></a></li>
                    </ul>
                </div> <!-- /barra lateral -->
            </div>
            <div class="span9">
                <div id="buscador">
                    <h2>Pedidos Pendientes</h2>
                    <p>Buscar:
                        <input type="text" name="buscadorBox">&nbsp;&nbsp;
                        <a href="#" class="shortcut"><i class="shortcut-icon icon-search"></i></a>
                        &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp;
