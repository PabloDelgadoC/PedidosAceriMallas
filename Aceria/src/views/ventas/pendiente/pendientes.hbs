                        &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp; &emsp;&nbsp;
                        <a class="btn btn-primary" href="/pedido" role="button">Agregar Pedido</a>
                    </p>
                </div>
                <div id="lista_items">
                    <table class="presentar">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th>Pedido</th>
                                <th>Sub Total</th>
                                <th>Desc.</th>
                                <th>Sub Total</th>
                                <th>IVA</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        {{#each pedidos}}
                        <tr>
                            <td>{{cliente}}</td>
                            <td>{{fcreacion}}</td>
                            <td>{{npedido}}</td>
                            <td>{{subtotal1}}</td>
                            <td>{{descuentos}}</td>
                            <td>{{subtotal2}}</td>
                            <td>{{iva}}</td>
                            <td>{{total}}</td>
                            <td>{{estado}}</td>
                            <td><a href="/pedido/edit/{{_id}}">Ver Info</a></td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>

    </div> <!-- /container -->

